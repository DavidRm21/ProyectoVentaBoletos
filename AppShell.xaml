<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProyectoFinalM.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ProyectoFinalM.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="ProyectoFinalM">

    <ShellContent
        Title="Inicio"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    

    <FlyoutItem Title="Cinema">

        <Tab Title="Peliculas">
            <ShellContent
                Title="Cartelera"
                ContentTemplate="{DataTemplate views:MoviesPage}"
                Route="MoviesPage" />
        </Tab>

        <Tab Title="Asientos">
            <ShellContent
                Title="Asiento"
                ContentTemplate="{DataTemplate views:SalaPage}"
                Route="SalaPage" />
        </Tab>

        <Tab Title="Resumen">
            <ShellContent
                Title="Pago"
                ContentTemplate="{DataTemplate views:PaymentPage}"
                Route="PaymentPage" />
        </Tab>

    </FlyoutItem>

</Shell>
